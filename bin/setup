#!/usr/bin/env sh

if ! command -v pod > /dev/null; then 
  printf 'Cocoapods not installed.\n'
  exit 1
fi

if ! command -v carthage > /dev/null; then 
  printf 'Carthage not installed.\n'
  exit 1 
fi

echo 'ðŸ”¶ Setting up Pod dependencies...\n'

# 1. Setup pods 
pod install

echo 'âœ… Pod Setup Completed\n'
echo 'ðŸ”¶ Setting up Carthage...\n'

# 2. Setup Carthage 
carthage update 

echo 'âœ… Carthage Setup Completed\n'
echo 'ðŸ”¶ Installing Node Package Manager dependencies...\n'

# 3. Setup npm dependencies
cd node_checkout && npm install && cd ..

echo 'âœ… Node Setup Completed\n'

# 4. Open workspace and start node server
open PayPalCheckout-Samples-iOS.xcworkspace && cd node_checkout && node index.js
